/*
 * RTL v1.2.x are all the releases that have migrated from LiteX to SpineX.
 *
 * They use 0x200000 as boot address.
 */

#include "tinyclunx33_rtl.dtsi"
#include <mem.h>

/ {
	chosen {
		zephyr,code-partition = &slot0_partition;
		zephyr,flash = &flash0;
		zephyr,flash-controller = &flashctrl;
	};

	soc {
		compatible = "tinyvision,tinyclunx33";
		ranges;

		flashctrl: flash-controller@e001f000 {
			compatible = "tinyvision,flash";
			reg = <0xe0001000 0x30>;
			#address-cells = <1>;
			#size-cells = <1>;
		};
	};
};

&flashctrl {
	flash0: flash@20000000 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "soc-nv-flash";
		reg = <0x20000000 0x1000000>;
		write-block-size = <256>;
		erase-block-size = <DT_SIZE_K(4)>;
		//jedec-id = [ef 60 18];
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot_partition: partition@0 {
				label = "fpga";
				reg = <0x000000 0x200000>;
			};

			slot0_partition: partition@200000 {
				label = "image-0";
				reg = <0x200000 0x100000>;
			};

			storage_partition: partition@300000 {
				label = "storage";
				reg = <0x300000 0xC00000>;
			};
		};
	};
};

&i2c0 {
    rtl-version = <1>;
};
